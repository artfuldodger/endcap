= form_for @band do |f|
  -if @band.errors.any?
    #error_explanation
      %h2= "#{pluralize(@band.errors.count, "error")} prohibited this band from being saved:"
      %ul
        - @band.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :start_year
    = f.text_field :start_year
  .field
    = f.label :end_year
    = f.text_field :end_year
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :homepage
    = f.text_field :homepage
  .field
    = f.label :store_url
    = f.text_field :store_url
  .actions
    = f.submit 'Save'
